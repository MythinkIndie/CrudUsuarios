{% extends 'base.html.twig' %}
{% block title %}Usuarios{% endblock %}
{% block body %}
<main class="flex flex-col items-center justify-center mx-auto px-4 py-2 text-center
    border border-gray-100 bg-white
    rounded-lg">
    <h1 class="font-bold text-3xl py-3 mb-6">Usuarios</h1>
    <form method="get" class="flex justify-between items-center w-full py-1.5 mb-4">
        <div class="min-w-[50%] flex">
            <input name="q" value="{{ term }}" placeholder="Buscar..." class="bg-blue-100/80 rounded-l-lg px-3 py-1 flex-auto">
            <button class="rounded-r-lg border border-blue-500 px-3 py-1 bg-blue-400 hover:bg-blue-600/80 text-white flex-auto">Buscar</button>
        </div>
        <a href="{{ path('user_new') }}" class="rounded-lg px-3 py-1 bg-blue-500 border border-blue-600/80 hover:bg-blue-600 text-white">+ Nuevo usuario</a>   
    </form>
    <table class="min-w-full bg-gray-50 border border-gray-200 shadow-md rounded-lg mb-4">
        <thead class="bg-gray-100 border-b">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Tel.</th>
                <th>Tipo</th>
                <th>Esta activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr class="border-b hover:bg-gray-50"> 
                <td class="py-3 px-4 text-sm text-gray-700">{{ user.id }}</td>
                <td class="py-3 px-4 text-sm text-gray-700">{{ user.name }}</td>
                <td class="py-3 px-4 text-sm text-gray-700">{{ user.email }}</td>
                <td class="py-3 px-4 text-sm text-gray-700">{{ user.phone }}</td>
                <td class="py-3 px-4 text-sm text-gray-700">{{ user.type }}</td>
                <td class="py-3 px-4 text-sm text-gray-700">
                    {% if user.isActive %}
                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                            Activo
                        </span>
                    {% else %}
                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                            Inactivo
                        </span>
                    {% endif %}
                </td>
                <td class="py-3 px-2 text-sm text-gray-700 flex justify-around items-center">
                    <a href="{{ path('user_show', {id: user.id}) }}" class="rounded-md bg-blue-500 hover:bg-blue-700 px-5 py-2 font-medium text-white">Ver</a>
                    <a href="{{ path('user_edit', {id: user.id}) }}" class="rounded-md bg-yellow-500 hover:bg-yellow-700 px-5 py-2 font-medium text-white">Editar</a>
                    <form method="post" action="{{ path('user_delete', {id: user.id}) }}" class="inline" onsubmit="return confirm('Â¿Eliminar usuario?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button type="submit" class="rounded-md bg-red-600 hover:bg-red-800 px-5 py-2 font-medium text-white">Borrar</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="7" class="py-4 text-center text-gray-500">No hay usuarios.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</main>
{% endblock %}